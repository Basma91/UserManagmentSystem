@model IEnumerable<UserViewModel>

@{ 
    ViewData["Title"] = "Users";
}
<a class="btn btn-primary" asp-action="Add">Add New User</a>
<table class="table table-striped mt-4">
    <thead>
        <tr class="bg-primary text-white">
            <th>Name</th>
            <th>User Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model)
            {
        <tr>
            <td>@string.Format("{0} {1}", @user.FirstName,user.LastName)</td>
    
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>@string.Join(",", @user.Roles.ToList())</td>
            <td><a class="btn btn-primary" asp-controller="User" asp-action="ManageRoles" asp-route-userid="@user.Id">Manage Roles</a></td>
        </tr>
            }
    </tbody>
</table>
